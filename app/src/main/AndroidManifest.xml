<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mike_milk.bihu">


    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:usesCleartextTraffic="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_secure_config"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.tiwenActivity"/>
        <activity android:name=".Activity.CollectActivity"/>
        <activity android:name=".Activity.ChangeAvatarActivity"/>
        <activity android:name=".Activity.ChangePasswordActivity"/>
        <activity android:name=".Activity.AnswerActivity"></activity>
        <activity android:name=".Activity.RegisterActivity" />
        <activity android:name=".Activity.LoginActivity" />
        <activity android:name=".Activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.MainActivity"/>
    </application>

</manifest>
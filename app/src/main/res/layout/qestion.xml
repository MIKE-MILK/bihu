<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="标题为空"
        android:maxLines="1"
        android:ellipsize="end"
        android:id="@+id/qestion_biaoti_tx"
        android:layout_marginTop="30dp"
        android:textSize="30dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/qestion_name_layout"
        android:orientation="horizontal"
        android:layout_below="@id/qestion_biaoti_tx">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/qestion_name_im"

            android:scaleType="centerCrop"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="用户名"
            android:layout_marginLeft="50dp"
            android:id="@+id/qestion_name_tx"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="内容为空"
        android:maxLines="10"
        android:ellipsize="end"
        android:id="@+id/qestion_neirong_tx"
        android:layout_below="@id/qestion_name_layout"/>
    <ImageView
        android:id="@+id/qestion_content_im"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/qestion_neirong_tx"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/qestion_time_tx"
        android:text=""
        android:layout_below="@id/qestion_content_im"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/qestion_time_tx"
        android:gravity="end"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/question_answer_cai"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@mipmap/ccc" />

        <ImageView
            android:id="@+id/question_answer_zan"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@mipmap/zanzanzan" />

        <ImageView
            android:id="@+id/question_answer_pinglun"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@mipmap/pinglun" />

        <ImageView
            android:id="@+id/question_answer_favorite"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@mipmap/xihuan" />

    </LinearLayout>

</RelativeLayout>

</LinearLayout>